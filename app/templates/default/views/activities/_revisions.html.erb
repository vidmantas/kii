<% grouped_record_log(@revisions, ["#", "Date", "Page", "By", ""]) do |revision, timestamp| %>
  <td><%= link_to "##{revision.revision_number}", page_revision_path(revision.page, revision) %></td>
  <td><%= timestamp %></td>
  <td><%= page_link(revision.page) %></td>
  <td><%= author_link(revision) %></td>
  <td><%= link_to "Changes", changes_page_revision_path(revision.page, revision) %></td>
<% end %>