<% page_title "Discussions activity log" %>
<% render :partial => "navigation" %>

<p class="page_summary">Showing the 50 latest discussion entries.</p>

<% grouped_record_log(@discussions, ["Page", "Title", "Updated", "Replies"], :updated_at) do |discussion, timestamp| %>
  <td><%= page_link(discussion.page) %></td>
  <td><%= link_to discussion.title, page_discussion_path(discussion.page, discussion) %></td>
  <td>
    <%= timestamp %>
    by
    <%= author_link(discussion.latest_discussion_entry) %>
  </td>
  <td><%= discussion.replies_count %></td>
<% end %>
