<% page_title "Editing profile" do %>
  <%= link_to "Back to public profile", user_path(@user) %>
<% end %>

<% form_for(@user, :url => profile_path) do |f| %>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>
  
  <p>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </p>
  
  <p>
    <%= f.label :profile_text %>
    <%= f.text_area :profile_text %>
  </p>
  
  <p><%= f.submit "Save" %></p>
<% end %>